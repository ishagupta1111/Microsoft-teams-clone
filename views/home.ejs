<%- include("header") -%>
<body>
<div class="body-container">
  <div class="container" id="container">
  	<div class="form-container sign-in-container">
  		<form>
  			<h1>Start Or Join Meeting</h1>
        <br>
        <button onclick = "MeetingControls()" type="button">Start Meeting</button>
        <br>
        <input type="text" placeholder="Enter Meeting Code" />
        <br>
        <button onclick = "joinMeeting()" type="button">Join Meeting</button>
        <br>
        <button onclick = "joinChatRoom()" type="button" name="button"> Chat Room</button>
  		</form>
  	</div>
  	<div class="overlay-container">
      <img src="images/4380.jpg" alt="">
  	</div>
</div>
<script>
  function MeetingControls() {
    const room_id = "<%= roomId %>";
    location.assign("/" + `${room_id}`);
  }

  function joinMeeting() {
    let mssg = $("input");
    if(mssg.val().length != 0) {
      location.assign("/" + `${mssg.val()}`);
    }
  }

  function joinChatRoom() {
    const room_id = "<%= roomId %>";
    location.assign("/chat/" + `${room_id}`);
  }
</script>
</body>

<%- include("footer") -%>
